<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>

  <form action="/patient" method="post">
    <button type="submit" class="btn btn-primary m-3" name="cancer">Cancer</button>
    <button type="submit" class="btn btn-primary m-3" name="mental">Mental</button>
    <button type="submit" class="btn btn-primary m-3" name="dental">Dental</button>
  </form>
    
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Sr. No.</th>
            <th scope="col">Name</th>
            <th scope="col">Mobile No.</th>
            <th scope="col">Date of appointment</th>
            <th scope="col">Time Slot</th>
            <th scope="col">Department</th>
          </tr>
        </thead>
        <tbody>
          <% for (let index = 0; index < patient.length; index++) { %>  
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= patient[index].name %></td>
            <td><%= patient[index].mobile %></td>
            <td><%= patient[index].date.toLocaleDateString('en-GB'); %></td>
            <td><%= patient[index].timeSlot; %></td>
            <td><%= patient[index].department %></td>
          </tr>
          <% } %>
        </tbody>
      </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</body>
</html>